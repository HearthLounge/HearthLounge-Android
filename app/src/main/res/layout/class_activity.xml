<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/pearl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_grey"
        >

        <LinearLayout
            android:gravity="center"
            android:id="@+id/search"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:src="@android:drawable/ic_menu_search" />

            <TextView
                android:textSize="16sp"
                android:textColor="@color/primary_font_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"/>
        </LinearLayout>

        <!--<LinearLayout-->
            <!--android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="vertical">-->

            <!--<ImageView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="@color/sea_color" />-->

        <!--</LinearLayout>-->

        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@color/light_grey"/>

        <LinearLayout
            android:gravity="center"
            android:id="@+id/all_cards"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:src="@drawable/card" />

            <TextView
                android:textSize="16sp"
                android:textColor="@color/primary_font_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALL"/>

        </LinearLayout>
    </LinearLayout>

    <GridLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:rowCount="3"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"

            android:layout_column="0"
            android:layout_row="0">

            <ImageButton
                android:id="@+id/button_mage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@color/dark_grey"
                android:src="@drawable/icon_mage" />

            <TextView
                android:id="@+id/text_mage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:textColor="@color/primary_font_color"
                android:text="MAGE"
                android:textSize="20dp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"

            android:layout_column="0"
            android:layout_row="1">

            <ImageButton
                android:id="@+id/button_paladin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@color/dark_grey"
                android:src="@drawable/icon_paladin" />

            <TextView
                android:id="@+id/text_paladin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:textColor="@color/primary_font_color"
                android:text="PALADIN"
                android:textSize="20dp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"

            android:layout_column="0"
            android:layout_row="2">

            <ImageButton
                android:id="@+id/button_shaman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@color/dark_grey"
                android:src="@drawable/icon_shaman" />

            <TextView
                android:id="@+id/text_shaman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:textColor="@color/primary_font_color"
                android:text="SHAMAN"
                android:textSize="20dp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"

            android:layout_column="1"
            android:layout_row="0">

            <ImageButton
                android:id="@+id/button_priest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@color/dark_grey"
                android:src="@drawable/icon_priest" />

            <TextView
                android:id="@+id/text_priest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:textColor="@color/primary_font_color"
                android:text="PRIEST"
                android:textSize="20dp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_column="1"
            android:layout_row="1">

            <ImageButton
                android:id="@+id/button_hunter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@color/dark_grey"
                android:src="@drawable/icon_hunter" />

            <TextView
                android:id="@+id/text_hunter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:textColor="@color/primary_font_color"
                android:text="HUNTER"
                android:textSize="20dp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_column="1"
            android:layout_row="2">

            <ImageButton
                android:id="@+id/button_rogue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@color/dark_grey"
                android:src="@drawable/icon_rogue" />

            <TextView
                android:id="@+id/text_rogue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:textColor="@color/primary_font_color"
                android:text="ROGUE"
                android:textSize="20dp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"

            android:layout_column="2"
            android:layout_row="0">

            <ImageButton
                android:id="@+id/button_druid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@color/dark_grey"
                android:src="@drawable/icon_druid" />

            <TextView
                android:id="@+id/text_druid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:textColor="@color/primary_font_color"
                android:text="DRUID"
                android:textSize="20dp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_column="2"
            android:layout_row="1">

            <ImageButton
                android:id="@+id/button_warlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@color/dark_grey"
                android:src="@drawable/icon_warlock" />

            <TextView
                android:id="@+id/text_warlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:textColor="@color/primary_font_color"
                android:text="WARLOCK"
                android:textSize="20dp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_column="2"
            android:layout_row="2">

            <ImageButton
                android:id="@+id/button_warrior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@color/dark_grey"
                android:src="@drawable/icon_warrior" />

            <TextView
                android:id="@+id/text_warrior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:textColor="@color/primary_font_color"
                android:text="WARRIOR"
                android:textSize="20dp" />

        </android.support.v7.widget.CardView>

    </GridLayout>

</LinearLayout>