<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/pearl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp">

        <LinearLayout
            android:id="@+id/curse_of_naxxramas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_dark">

            <ImageView
                android:id="@+id/image_curse_of_naxxramas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="40dp"
                android:src="@drawable/naxxramas" />

            <TextView
                android:id="@+id/text_curse_of_naxxramas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:textColor="@color/naxx"
                android:text="CURSE OF NAXXRAMAS"
                android:textAlignment="center"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/blackrock_mountain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/frame_dark">

            <ImageView
                android:id="@+id/image_blackrock_mountain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="40dp"
                android:src="@drawable/blackrock_mountain" />

            <TextView
                android:id="@+id/text_blackrock_mountain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:textColor="@color/bm"
                android:text="BLACKROCK MOUNTAIN"
                android:textAlignment="center"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/the_leage_of_explorers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/frame_dark">

            <ImageView
                android:id="@+id/image_the_leage_of_explorers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="40dp"
                android:src="@drawable/the_league_of_explorers" />

            <TextView
                android:id="@+id/text_the_leage_of_explorers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:textColor="@color/loe"
                android:text="THE LEAGE OF EXPLORERS"
                android:textAlignment="center"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/one_night_in_karazhan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/frame_dark">

            <ImageView
                android:id="@+id/image_one_night_in_karazhan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="40dp"
                android:src="@drawable/karazhan" />

            <TextView
                android:id="@+id/text_one_night_in_karazhan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:textColor="@color/karazhan"
                android:text="ONE NIGHT IN KARAZHAN"
                android:textAlignment="center"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>