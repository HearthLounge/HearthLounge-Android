<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pearl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimaryDark">

            <LinearLayout
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:clickable="true"
                android:gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:src="@mipmap/ic_search_white_36dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:textColor="@color/primary_font_color"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="?attr/colorPrimary" />

            <LinearLayout
                android:id="@+id/all_cards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:clickable="true"
                android:gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/all_cards" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All"
                    android:textColor="@color/primary_font_color"
                    android:textSize="16sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin">

            <GridLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:rowCount="5"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="16dp"
                    android:layout_column="0"
                    android:layout_row="0">

                    <ImageButton
                        android:id="@+id/button_mage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:padding="40dp"
                        android:background="?attr/colorPrimaryDark"
                        android:src="@drawable/icon_mage" />

                    <TextView
                        android:id="@+id/text_mage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:textColor="@color/primary_font_color"
                        android:text="MAGE"
                        android:textSize="20dp" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_column="0"
                    android:layout_row="1">

                    <ImageButton
                        android:id="@+id/button_paladin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:padding="40dp"
                        android:background="?attr/colorPrimaryDark"
                        android:src="@drawable/icon_paladin" />

                    <TextView
                        android:id="@+id/text_paladin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:textColor="@color/primary_font_color"
                        android:text="PALADIN"
                        android:textSize="20dp" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_column="0"
                    android:layout_row="2">

                    <ImageButton
                        android:id="@+id/button_shaman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:padding="40dp"
                        android:background="?attr/colorPrimaryDark"
                        android:src="@drawable/icon_shaman" />

                    <TextView
                        android:id="@+id/text_shaman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:textColor="@color/primary_font_color"
                        android:text="SHAMAN"
                        android:textSize="20dp" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_column="0"
                    android:layout_row="3">

                    <ImageButton
                        android:id="@+id/button_priest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:padding="40dp"
                        android:background="?attr/colorPrimaryDark"
                        android:src="@drawable/icon_priest" />

                    <TextView
                        android:id="@+id/text_priest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:textColor="@color/primary_font_color"
                        android:text="PRIEST"
                        android:textSize="20dp" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_column="0"
                    android:layout_row="4">

                    <ImageButton
                        android:id="@+id/button_hunter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:padding="40dp"
                        android:background="?attr/colorPrimaryDark"
                        android:src="@drawable/icon_hunter" />

                    <TextView
                        android:id="@+id/text_hunter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:textColor="@color/primary_font_color"
                        android:text="HUNTER"
                        android:textSize="20dp" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_marginTop="16dp"
                    android:layout_column="1"
                    android:layout_row="0">

                    <ImageButton
                        android:id="@+id/button_rogue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:padding="40dp"
                        android:background="?attr/colorPrimaryDark"
                        android:src="@drawable/icon_rogue" />

                    <TextView
                        android:id="@+id/text_rogue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:textColor="@color/primary_font_color"
                        android:text="ROGUE"
                        android:textSize="20dp" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_column="1"
                    android:layout_row="1">

                    <ImageButton
                        android:id="@+id/button_druid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:padding="40dp"
                        android:background="?attr/colorPrimaryDark"
                        android:src="@drawable/icon_druid" />

                    <TextView
                        android:id="@+id/text_druid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:textColor="@color/primary_font_color"
                        android:text="DRUID"
                        android:textSize="20dp" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_column="1"
                    android:layout_row="2">

                    <ImageButton
                        android:id="@+id/button_warlock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:padding="40dp"
                        android:background="?attr/colorPrimaryDark"
                        android:src="@drawable/icon_warlock" />

                    <TextView
                        android:id="@+id/text_warlock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:textColor="@color/primary_font_color"
                        android:text="WARLOCK"
                        android:textSize="20dp" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_column="1"
                    android:layout_row="3">

                    <ImageButton
                        android:id="@+id/button_warrior"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:padding="40dp"
                        android:background="?attr/colorPrimaryDark"
                        android:src="@drawable/icon_warrior" />

                    <TextView
                        android:id="@+id/text_warrior"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:textColor="@color/primary_font_color"
                        android:text="WARRIOR"
                        android:textSize="20dp" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_column="1"
                    android:layout_row="4">

                    <ImageButton
                        android:id="@+id/button_neutral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:padding="40dp"
                        android:background="?attr/colorPrimaryDark"
                        android:src="@drawable/neutral" />

                    <TextView
                        android:id="@+id/text_neutral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:textColor="@color/primary_font_color"
                        android:text="NEUTRAL"
                        android:textSize="20dp" />

                </android.support.v7.widget.CardView>

            </GridLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>